@page
@model PizzaStore.Pages.Accounts.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1>Please Login Here</h1>
<div>Enter your details below:</div>

<form method="post">
    <div>
        <label asp-for="Account.UserName">User Name:</label>
        <input asp-for="Account.UserName" required />
    </div>
    <div>
        <label asp-for="Account.Password">Password:</label>
        <input asp-for="Account.Password" type="password" required />
    </div>
    <div>
        <button type="submit">Login</button>
    </div>
    @if (!ModelState.IsValid)
    {
        <div class="text-danger">Invalid login attempt. Please try again.</div>
    }
</form>


<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f7f7f7;
        padding: 20px;
    }
    h1 {
        color: #333;
    }
    div {
        margin-bottom: 15px;
    }
    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }
    input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
    button {
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
    button:hover {
        background-color: #0056b3;
    }
</style>
